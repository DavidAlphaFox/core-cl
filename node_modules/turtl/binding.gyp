{
	'targets': [{
		'target_name': 'turtl',
		'sources': ['async.cpp', 'msg.cpp', 'turtl.cpp'],
		'include_dirs': [
			"<!(node -e \"require('nan')\")",
			"../../src"
		],
		'conditions': [
			[
				'OS=="win"',
				{
					'link_settings': {
						'libraries': ['../../../turtl.lib'],
					},
					'msvs_settings': {
						'VCCLCompilerTool': {
							'ExceptionHandling': "0",
							'AdditionalOptions': [
								'/MP /EHsc'
							]
						}
					}
				}
			],
			[
				'OS=="linux"',
				{
					'link_settings': {
						'libraries': ['../../../turtl.so'],
					}
				}
			],
			[
				'OS=="mac"',
				{
					'link_settings': {
						'libraries': ['../../../turtl.dylib'],
					},
					'architecture': 'i386'
				}
			]
		]

	}]
}

